{
  "extends": ["stylelint-config-standard", "stylelint-config-css-modules"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen",
          "theme"
        ]
      }
    ],
    "import-notation": null,
    "color-hex-length": null
  }
}
