{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": ["api_gateway.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Node: admin-dashboard",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "cwd": "${workspaceFolder}/frontend/admin-dashboard",
            "port": 9229
        }
    ]
}
